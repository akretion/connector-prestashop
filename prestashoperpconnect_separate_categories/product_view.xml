<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<record id="product_connector_presta_form_view" model="ir.ui.view">
    <field name="name">prestashoperpconnect.separate.categ.product.form</field>
    <field name="model">prestashop.product.template</field>
    <field name="inherit_id" ref="prestashoperpconnect.product_connector_presta_form_view" />
    <field name="type">form</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='default_shop_id']" position="after">
            <field name="default_categ_id" domain="[('prestashop_bind_ids', '!=', False)]"/>
        </xpath>
    </field>
</record>

<record id="product_separate_categ_from_view" model="ir.ui.view">
    <field name="name">product.separate.categ.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field eval="50" name="priority"/>
    <field name="arch" type="xml">
        <field name="categ_ids" position="attributes">
            <attribute name="domain">[('prestashop_bind_ids', '!=', False)]</attribute>
        </field>
    </field>
</record>

<record id="product_separate_main_categ_form_view" model="ir.ui.view">
    <field name="name">product.separate.main.categ.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="account.product_template_form_view"/>
    <field name="arch" type="xml">
        <field name="categ_id" position="attributes">
            <attribute name="domain">[('prestashop_bind_ids', '=', False)]</attribute>
        </field>
    </field>
</record>

</data>
</openerp>
